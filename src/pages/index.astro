<style>
	.index-header {
		text-align: center;
		margin-top: 2rem;
		position: absolute;
		display: block;
		text-align: left;
		margin: 0rem 0rem 0rem -4rem;
		font-size: 32rem;
		position: fixed;
	}
	.index-card {
		display: flex;
		flex-direction: column;
		max-width: 1140px;
		margin: auto;
		border-radius: 1rem;
		z-index: 1;
	}
	.index-card-contents {
		border-radius: 1rem;
		position: relative;
		background: #e8e8e89c;
		margin: -10rem 38rem 0rem 0rem;
		padding: 12rem 2rem 2rem 2rem;
		box-shadow: 0 0 50px -16px #7474748d;
		z-index: 2;
	}
	@media screen and (max-width: 1200px) {
		.index-card-contents {
			margin: 6rem 20rem 0rem 10rem;
			padding: 2rem;
		}
	}
	@media screen and (max-width: 900px) {
		.index-card-contents {
			margin: 22rem 0rem 0rem 0rem;
			padding: 2rem;
		}
	}
	@media screen and (max-width: 600px) {
		.index-card-contents {
			margin: 33rem 0rem 0rem 0rem;
			padding: 2rem;
		}
	}
	html.dark > body > div > div > div.index-card-contents {
		background: #16161640;
		box-shadow: 0 0 50px -16px #000000c2;
	}
	.index-card-contents:before {
		content: "";
		pointer-events: none;
		position: absolute;
		display: block;
		height: 100%;
		width: 100%;
		top: 0px;
		left: 0px;
		backdrop-filter: blur(32px);
		-webkit-backdrop-filter: blur(32px);
		border-radius: 1rem;
		z-index: -1;
	}
	.big-text-container {
		position: absolute;
		top: -6rem;
		width: 100%;
		height: 100%;
		overflow: hidden;
		display: block;
		z-index: -1;
		color: #0800ff;
	}
	#big-text {
		letter-spacing: 8px;
		font-weight: 500;
		color: #3448ff;
	}
	#big-text-2 {
		letter-spacing: 64px;
		margin: 11rem 0rem 0rem 2rem;
		font-weight: 400;
		font-size: 38rem;
		font-style: italic;
	}
</style>
